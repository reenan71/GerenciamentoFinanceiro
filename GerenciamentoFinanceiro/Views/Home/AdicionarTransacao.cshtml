@model FinanceiroModel
<!DOCTYPE html>

<html>
<title>Adicionar Transação</title>
<head>
</head>
<body>
<h2 class="mt-4">Planejamento Financeiro</h2>
<div asp-validation-summary="All" class="text-danger"></div>
<form asp-action="AdicionarTransacao" asp-controller="Home" method="post">
    <div class="mb-3">
        <label class="form-label">Descrição:</label>
        <input class="form-control" type="text" asp-for="Descricao"/>
    </div>
    <div class="mb-3">
        <label class="form-label">Valor R$:</label>
        <input class="form-control" type="number" asp-for="Valor"/>
    </div>
    <div class="mb-3">
        <label class="form-label">Categoria:</label>
        <select class="form-select" asp-for="CategoriaId" asp-items="@(new SelectList(ViewBag.Categorias, "CategoriaId", "Nome"))">
            <option value=""></option>
        </select>
    </div>
    <div class="mb-3">
        <label class="form-label">Data de Operação:</label>
        <input class="form-control" type="date" asp-for="DataOperacao"/>
    </div>
    <div class="mb-3">
        <label class="form-label">Transação:</label>
        <select class="form-select" asp-for="TransacaoId" asp-items="@(new SelectList(ViewBag.Transacoes, "TransacaoId", "Nome"))">
            <option value=""></option>
        </select>
    </div>
    <div class="d-flex justify-content-between gap-1">
        <button class="btn btn-success w-100 mb-2">Adicionar</button>
        <a asp-action="Index" class="btn btn-danger w-100 mb-2">Cancelar</a>
    </div>
</form>
</body>
</html>
