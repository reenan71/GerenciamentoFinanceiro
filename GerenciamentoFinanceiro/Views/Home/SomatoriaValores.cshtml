@model List<AnaliseFinaceira>

<!DOCTYPE html>

<html>
<head>
  <title>Analise Financeira</title>
</head>
<body>
<div class="container">
  <div class="row mt-5">
    <a asp-action="Index" class="btn btn-info w-100 mb-5">Voltar</a>
    <div class="col-sm-12 col-md-4">
      <h2>Ganhos</h2>
      <table class="table table-bordered mt-2">
        <thead class="table-success">
        <tr>
          <th>Categoria</th>
          <th>Transação</th>
          <th>Data de Operação</th>
          <th>Valor R$</th>
        </tr>
        </thead>
        <tbody>
        @if (Model.Count() > 0)
        {
          @foreach (var ganho in Model.Where(x => x.TransacaoNome == "Ganho").ToList())
          {
            <tr>
              <td>@ganho.CategoriaNome</td>
              <td>@ganho.TransacaoNome</td>
              <td>@ganho.DataOperacao</td>
              <td>R$ @ganho.ValorCategoria</td>
            </tr>
          }
        }
        </tbody>
      </table>
    </div>
    <div class="col-sm-12 col-md-4">
      <h2>Gastos</h2>
      <table class="table table-bordered mt-2">
        <thead class="table-danger">
        <tr>
          <th>Categoria</th>
          <th>Transação</th>
          <th>Data de Operação</th>
          <th>Valor R$</th>
        </tr>
        </thead>
        <tbody>
        @if (Model.Count() > 0)
        {
          @foreach (var gasto in Model.Where(x => x.TransacaoNome == "Perda").ToList())
          {
            <tr>
              <td>@gasto.CategoriaNome</td>
              <td>@gasto.TransacaoNome</td>
              <td>@gasto.DataOperacao</td>
              <td>R$ @gasto.ValorCategoria</td>
            </tr>
          }
        }
        </tbody>
      </table>
    </div>
    <div class="col-sm-12 col-md-4">
      <h2>Totais</h2>
      <table class="table table-bordered mt-2">
        <thead class="table-dark">
        <tr>
          <th>Gastos</th>
          <th>Ganhos</th>
          <th>Diferença</th>
        </tr>
        </thead>
        <tbody>
        @if (Model.Count() > 0)
        {
          <tr>
            <td>R$ @Model.First().Gastos</td>
            <td>R$ @Model.First().Ganhos</td>
            <td>R$ @Model.First().Diferenca</td>
          </tr>
        }
        </tbody>
      </table>
    </div>
  </div>
</div>
</body>
</html>